.menu-block
  background-color #3e4757
  width 100%

.menu
  text-align justify
  &:after
    content ""
    width 100%
    height 0
    display inline-block
    visibility hidden
    overflow hidden
  li
    display inline-block
    vertical-align top
  &__item
    color #FFFFFF
    display inline-block
    padding 25px 0
    &:hover
      border-bottom 2px solid #ffdd2d