  /* Medium Devices, Desktops */
  @media screen and (max-width : 992px)
    .logo-mobile
      display block
    .logo-main
      display none
    .toggle
      display block
    .phone
      font-size 17px
      float left
      margin-top 15px
    .block-centre
      width calc(50%+60px)
      float right
    .banner:before
      background-size contain
    .menu-block
      display none




    /* Small Devices, Tablets */
  @media screen and (max-width : 768px)
    .info
      float none
      display inline-block
      z-index 20
      width 100%
    .title
      font-size 30px
    .banner
      text-align center
      padding 25px 0
    .btn_absolute
      position: absolute;
      bottom: 25px;
      left: 0;
      right: 0;
      margin: auto;
      width: 242px;
    .banner:before
      top 50px

    .block
      display block
      width 100%
      .btn
        width 100%
    .category
      max-width 100%
