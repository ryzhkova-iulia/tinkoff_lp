extends ../layout/main

block title
    | Главная страница

block content
    include ../modules/menu

    section.banner.clearfix
        .content
            .info
                h1.main-title Карты для вас  прямо сейчас
                span.subtitle Выбирайте карту, пользуйтесь <br> удобными сервисами
                button.btn.btn_absolute Оформить заявку
    section.container
        .content.content_align
            .block
                h2.block__title Любые категории  платежей
                select.category.js-category(multiple=true)
                    option Кафе
                    option Интернет
                    option Супермаркеты
                    option Телефон
                    option ЖКХ
                    option Авто
                    option Кафе2
                    option Суппер длинная категория

                //.category.js-scroll
                //    .category__content
                //        .category__item Кафе
                //        .category__item Интернет
                //        .category__item Супермаркеты
                //        .category__item Телефон
                //        .category__item ЖКХ
                //        .category__item Авто
                //        .category__item Кафе
                //        .category__item Интернет
                //        .category__item Супермаркеты
            .block
                form
                    div.field
                        select.field__item
                            option Кредитная карта
                        span.field__title Тип продукта
                    div.field
                        select.field__item
                            option Кредитная карта
                        span.field__title Тип продукта
                    div.field
                        textarea(placeholder="Желаемый размер кредита").field__item.field_textarea
                    button.btn Заполнить заявку

            .block
                .block-border
                    h2.block__title Все условия  для вас
                    span.block__info Стоимость обслуживания и всю информацию  о кредитных картах  вы сможете найти  в договоре
                        .tooltip-icon
                        .tooltip
                            | Pragmatica Regular 13pt 18int ¶12
                            | Ваши данные замаскированы в целях безопасности. Для изменения информации с вами свяжется оператор колл-центра.
                a(href="").block__link ВСЕ УСЛОВИЯ

    section
        .content
            .block-tab.clearfix
                .tabs
                    input(type="radio" id="tab_1" name="tab" checked="checked")
                    input(type="radio" id="tab_2" name="tab")
                    input(type="radio" id="tab_3" name="tab")
                    input(type="radio" id="tab_4" name="tab")
                    .tabs__title
                        .tabs__title__inner
                            label(for='tab_1') СЧЕТА НА ОПЛАТУ
                            label(for='tab_2') ИЗБРАННОЕ
                            label(for='tab_3') ПЛАТЕЖИ И ПЕРЕВОДЫ
                            label(for='tab_4') бонусы

                    .tabs_cont
                        #tab_c1
                            h2.block__title У вас два неоплаченных штрафа
                                span.block__title__subtitle Оплатите до 1 августа с 50% скидкой
                            form
                                .row.clearfix
                                    .field
                                        select.field__item
                                            option Tinkoff Black
                                        span.field__title 78 000 Р
                                    .field
                                        select.field__item
                                            option Штраф
                                        span.field__title Постановление №123456788
                                .row
                                    div.field.field_width
                                        textarea(placeholder="Желаемый размер кредита").field__item.field_textarea
                                    button.btn Заполнить заявку

                        #tab_c2 Content of  second
                        #tab_c3 Content of third tab
